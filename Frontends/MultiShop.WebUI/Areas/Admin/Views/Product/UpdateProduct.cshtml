@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Güncelleme Sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="text" class="form-control" asp-for=Name placeholder="Ürün Adı" />
                        <br />
                        <input type="text" class="form-control" asp-for=Price placeholder="Ürün Fiyatı" />
                        <br />
                        <input type="text" class="form-control" asp-for=ImageUrl placeholder="Ürün Görseli" />
                        <br />
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" style="padding:0;">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                        <br />
                        <textarea rows="5" class="form-control" asp-for=Description placeholder="Ürün Açıklaması"></textarea>
                        <br />
                        <button class="btn btn-primary">Ürünü Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>


